# EditorConfig defines and maintains consistent coding styles between different
# editors and IDEs: http://EditorConfig.org/

# Top-most EditorConfig file
root = true

# All files
[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 4
max_line_length = 80
